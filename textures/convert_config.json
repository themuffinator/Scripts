{
  "base_root": {
    "doom3": "C:/_SOURCE/_ASSETS/D3",
    "quake4": "C:/_SOURCE/_ASSETS/Q4"
  },
  "dst_base": "C:/tools/out_new",
  "blender_exe": "C:/Program Files/Blender Foundation/Blender 4.5/blender.exe",
  "blender_bake_script": "C:/tools/improved_bake_script.py",
  "output_ext": ".tga",
  "verbose": true,
  "parallel_jobs": 11,
  "cache_index": true,
  "dry_run": false,
  "force_rebuild": false,
  "rebuild_if_newer": true,
  "quake2": {
    "enabled": true,
    "palette_path": "pics/colormap.pcx",
    "scale_percent": 50.0,
    "alpha_threshold": 128,
    "skip_auxiliary_maps": true,
    "light_value": 1000
  },
  "profile": "doom3",
  "profiles": {
    "doom3": {
      "display_name": "Doom 3",
      "directory_rules": [
        {"type": "startswith", "match": "common_", "replacement": "d3_{suffix}"},
        {"type": "default", "replacement": "d3_{value}"}
      ],
      "filename_replacements": [
        ["noshadows", "nsw"],
        ["shadows", "sw"],
        ["shadow", "shw"],
        ["light", "lt"],
        ["vertical", "vert"],
        ["visportal", "vis"],
        ["support", "supp"],
        ["nonsolid", "ns"],
        ["texture", "tex"],
        ["collision", "coll"]
      ],
      "features": {
        "guide_glow_suffix": "_g",
        "guide_terminal_suffix": "_add",
        "max_path_length": 31,
        "default_prefix": "d3"
      }
    },
    "quake4": {
      "display_name": "Quake 4",
      "directory_rules": [
        {"type": "equals", "match": "command_ship", "replacement": "q4_ship"},
        {"type": "equals", "match": "consoles", "replacement": "q4_con"},
        {"type": "equals", "match": "decals", "replacement": "q4_dec"},
        {"type": "equals", "match": "medlabs", "replacement": "q4_labs"},
        {"type": "equals", "match": "mptextures", "replacement": "q4_mp"},
        {"type": "equals", "match": "stroyent", "replacement": "q4_stroy"},
        {"type": "equals", "match": "terminal", "replacement": "q4_term"},
        {"type": "equals", "match": "q4x_mptextures", "replacement": "q4x_mp"},
        {"type": "equals", "match": "q4x_q4xdm2", "replacement": "q4x_dm2"},
        {"type": "equals", "match": "q4x_powercore", "replacement": "q4x_power"},
        {"type": "equals", "match": "q4x_speeder", "replacement": "q4x_speed"},
        {"type": "startswith", "match": "q4x_", "replacement": "{value}"},
        {"type": "startswith", "match": "common_", "replacement": "q4_{suffix}"},
        {"type": "default", "replacement": "q4_{value}"}
      ],
      "filename_replacements": [
        ["noshadows", "nsw"],
        ["shadows", "sw"],
        ["shadow", "shw"],
        ["light", "lt"],
        ["vertical", "vert"],
        ["visportal", "vis"],
        ["support", "supp"],
        ["nonsolid", "ns"],
        ["texture", "tex"],
        ["collision", "coll"]
      ],
      "features": {
        "guide_glow_suffix": "_g",
        "guide_terminal_suffix": "_add",
        "max_path_length": 31,
        "default_prefix": "q4"
      }
    }
  },
  "bake": {
    "sun_az": 45.0,
    "sun_el": 55.0,
    "sun_power": 4.0,
    "sun_color": [1.0, 1.0, 1.0],
    "world_ambient": 0.02,
    "normal_strength": 1.67,
    "height_strength": 1.67,
    "samples": 11
  },
  "vibrance": {
    "spec_gain": 1.33,
    "roughness_bias": -0.05,
    "sat_gain": 1.0,
    "contrast": 0.0,
    "brightness": 0.0,
    "diffuse_gain": 1.0,
    "clearcoat_gain": 0.0
  }
}
